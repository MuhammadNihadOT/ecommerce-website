<section>
  <div class="">
    {{#if name}}
    <div style="margin: 40px 40px;">
      <h3 style="letter-spacing: 1px;font-weight: 600;color: #564c4c;">{{name}}</h3>
      <div></div>
    </div>
    {{/if}}
  </div>
</section>

<section>
  <div class="container-fluid" style="    margin-top: 40px;margin-bottom:30px">
    <div class="row">
      {{#if SubCat}}
      {{#each SubCat}}
      <div class="transform" style="/* background-color: aqua; */display: flex;flex-direction: row;align-items: center;padding-left: 20px;/* padding: 9px; */border-radius: 13px;border: 1px solid #efe7e7;box-shadow: 0px 0px 16px 3px #e5e5e5;    width: 350px;    margin: 15px 50px;">
        <div>
          <img src="/sub-category-images/{{this._id}}.jpg" width="65px" height="50px" alt="">
        </div>
        <div class="card-body" style="padding-left: 20px;">
          <a target="_blank" href="{{this.link}}" style="text-decoration: none;color: black;">
            <h5 style="font-weight: 600;" class="card-title">{{this.name}}</h5>
          </a>
        </div>
      </div>
      {{/each}}
      {{else}}
      <h4 style="padding-left: 40px;">No data available!</h4>
      {{/if}}
    </div>
  </div>
</section>







<style>
  .transform:hover {
    transform: scale(1.0);
    border: 1px solid green !important;
  }
</style>