<section>
    <form action="/edit-profile" method="post">
        <div class="" style="width: 100%;display: flex;align-items: center;flex-direction: column;">
            <div style="   margin-top: 5rem;padding: 21px 30px;border: 1px solid #b9b3b3;border-radius: 10px;">
                <div class="form-group text-center" style="width: 390px;padding-top: 2rem;">
                    <h3 for="exampleInputEmail1">Edit Profile</h3>
                </div>
                {{#if userData}}
                <div class="form-group" style="width: 390px;">
                    <label for="exampleInputEmail1">Name</label>
                    <input type="text" class="form-control" id="exampleInputEmail1" name="name" value="{{userData.name}}" aria-describedby="emailHelp" placeholder="Enter email">
                </div>
                <div class="form-group" style="width: 390px;">
                    <label for="exampleInputPassword1">Email</label>
                    <input type="email" class="form-control" id="exampleInputPassword1" name="emailaddr" value="{{userData.emailaddr}}" placeholder="Password">
                </div>
                {{/if}}
                <button style="width: 110px;" type="submit" class="btn btn-primary">Update</button>
            </div>
        </div>
    </form>
</section>