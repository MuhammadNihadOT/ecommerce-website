<div class="d-flex justify-content-center align-items-center container">
    <div class="card py-5 px-3" style="box-shadow: 0px 0px 10px 2px #d1cbcb;">
        <h5 class="m-0">Email verification</h5><span class="mobile-text" style="color: #524c4cb8;">Enter the code we just send on your email addressÂ <b class="text-danger">{{email}}</b></span>
        <form action="/admin/verifyingSignup" method="post" style="    margin-top: 35px;">
        
            <div class="d-flex flex-row mt-5" style="    margin-top: 1rem!important;">
                <input maxlength="1" oninput="this.value=this.value.replace(/[^0-9]/g,'');" type="number" class="form-control" name="FirstDigit" autofocus="">
                <input maxlength="1" type="number" class="form-control" name="SecondDigit">
                <input maxlength="1" type="number" class="form-control" name="ThirdDigit">
                <input maxlength="1" type="number" class="form-control" name="FourthDigit">
                <input maxlength="1" type="number" class="form-control" name="FifthDigit">
                <input maxlength="1" type="number" class="form-control" name="SixthDigit">
                
            </div>
            {{#if OTP_ERROR}}
                <div style="margin-top: 13px;"><span style="color: red;font-size: 13px;">{{OTP_ERROR}}</span></div>
            {{/if}}
            {{#if error}}
                <div style="margin-top: 13px;"><span style="color: red;font-size: 13px;">{{error}}</span></div>
            {{/if}}
            
            <div style="    display: flex;
    align-content: center;
    margin-top: 2rem;
    justify-content: center;">
                <div>
                    <input type="submit" value="Submit" class="btn btn-success" style="width: 200px;">
                </div>
            </div>
        </form>
        <div class="text-center mt-1"><span class="d-block mobile-text" style="    color: #524c4cb8;">Don't receive the code?</span><span class="font-weight-bold text-danger cursor">Resend</span></div>
    </div>
</div>

<script>
    $("input").keyup(function () {
    if (this.value.length == this.maxLength) {
      var $next = $(this).next('input');
      if ($next.length)
          $(this).next('input').focus();
      else
          $(this).blur();
    }
});
</script>

