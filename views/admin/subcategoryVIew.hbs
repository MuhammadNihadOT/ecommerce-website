<section style="margin-top: 5rem;">
  <div class="container">
    {{#if subCategories}}
    <div class="row mt-4 mb-4">
    </div>
    <table class="table mt-4" id="ViewOnSubCat">
      <thead>
        <tr>
          <th>Logo</th>
          <th scope="col">SubCategories Name</th>
          <th>Description</th>
          <th>link</th>
          <th></th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        {{#each subCategories}}
        <tr>
          <td>
            <img src="/sub-category-images/{{this._id}}.jpg" alt="" width="65px " height="50px">
          </td>
          <td>{{this.name}}</td>
          <td>{{this.description}}</td>
          <td>{{this.link}}</td>
          <td></td>
          <td>
            <a style="text-decoration: none;color: aliceblue;" href="/admin/edit-subcategory/{{this._id}}" class="btn btn-success">Edit</a>
            <a style="text-decoration: none;color: aliceblue;" href="/admin/delete-subcategory/{{this._id}}"  onclick="return confirm('Are you want to delete {{this.name}} ')" class="btn btn-danger">Delete</a>
          </td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
  {{else}}
  <h3 class="pt-5">No data available!</h3>
  {{/if}}
</section>
