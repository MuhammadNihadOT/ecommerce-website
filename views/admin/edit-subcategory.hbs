<section style="margin-top: 5rem;">
    <div class="container">
        <form action="/admin/edit-subcategory/{{response._id}}" method="POST" enctype="multipart/form-data">
            <div class="row w-50 mt-4">
                <div class="text-center w-100">
                    <h3 class="font-weight-bold">Edit Category </h3>
                </div>
                <div class="col-12">
                    <label>Name</label>
                    <input type="text" class="form-control" name="name" value="{{response.name}}" />
                </div>
                <div class="col-12">
                    <label>Description</label>
                    <input type="text" class="form-control" name="description" value="{{response.description}}" />
                </div>
                <div class="col-12">
                    <label>Image</label>
                    <img src="/sub-category-images/{{response._id}}.jpg" style="width: 100px;height: auto;    width: 101px; padding-top: 2rem; padding-bottom: 2rem; margin-left: 2rem; height: auto;" id="imgViewSubCat">
                    <input type="file" class="form-control" name="image" onchange="viewImageSubCategory(event)" />
                </div>
                <div class="col-12">
                    <label>Link</label>
                    <input type="url" class="form-control" name="link" value="{{response.link}}" />
                </div>
                <div class="ml-3" style="padding-bottom:2rem">
                    <button type="submit" class="btn btn-success mt-3">Update Category</button>
                </div>
            </div>
        </form>
    </div>
</section>