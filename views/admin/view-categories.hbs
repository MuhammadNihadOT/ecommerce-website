<section style="margin-top: 5rem;">
  <div class="container">
    <div class="row mt-4 mb-4">
      <a href="/admin/add-categories" class="btn btn-success ml-auto">Add Categories</a>
    </div>
    {{#if Categories}}
    <table class="table mt-4" id="TableFoRfillter">
      <thead class="text-center">
        <tr>
          <th scope="col">Logo</th>
          <th scope="col">Name</th>
          <th scope="col">Description</th>
          <th></th>
          <th scope="col"></th>
          <th></th>
          <th></th>
        </tr>
      </thead>
      <tbody class="text-center">
        {{#each Categories}}
        <tr>
          <td>
            <img src="/category-images/{{this._id}}.jpg" alt="" width="65px" height="50px">
          </td>
          <td style="word-break: break-all;">{{this.name}}</td>
          <td style="word-break: break-all;">{{this.description}}</td>
          <td>
            <a class="btn bg-primary text-white" href="/admin/add-subcategories/{{this._id}}">Add Subcategories</a>
          </td>
          <td>
            <a class="btn bg-secondary text-white" href="/admin/subcategoryVIew/{{this._id}}">View Subcategories</a>
          </td>
          <td>
            <a class="btn bg-success text-white" href="/admin/edit-category/{{this._id}}">Edit</a>
          </td>
          <td class="">
            <a class="btn bg-danger text-white" href="/admin/delete-category/{{this._id}}" onclick="return confirm('Are you want to delete {{this.name}} ')">Delete</a>
          </td>
        </tr>
        {{/each}}
      </tbody>
    </table>
    {{else}}
    <h3>No data available!</h3>
    {{/if}}
  </div>
</section>

<script>
  $(document).ready(function () {
    $('#TableFoRfillter').DataTable();
  });
</script>